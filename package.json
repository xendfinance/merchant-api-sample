{
  "name": "merchant-test-app",
  "version": "1.0.0",
  "description": "this is a test application that will serve as a guide for new merhcnats to easily be able to integrate our third party apis",
  "main": "index.js",
  "engines": {
    "node": "16.13.2",
    "npm": "8.1.2"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha --check-leaks -r ts-node/register -r tsconfig-paths/register \"test/**/*.test.ts\"",
    "start": "node ./dist/entry.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node ./src/entry.ts",
    "production": "tsc && pm2 start ./pm2.production.config.js",
    "productionstop": "pm2 stop ./pm2.production.config.js",
    "staging": "tsc && forever start -a --uid \"MobileAPIStaging\" ./dist/entry.js",
    "stagingstop": "forever stop \"MobileAPIStaging\" ",
    "build": "tsc",
    "encode-staging": "base64 -i .env.staging -o .env.staging.enc",
    "encode-prod": "base64 -i .env.prod -o .env.prod.enc"
  },
  "keywords": [
    "xend-finance",
    "merchant",
    "test",
    "app"
  ],
  "author": "Ochoko peter",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "deep-trim": "^1.0.0",
    "dotenv": "^16.0.1",
    "ethereumjs-tx": "^2.1.2",
    "ethers": "^5.6.9",
    "express": "^4.18.1",
    "express-useragent": "^1.0.15",
    "form-data": "^4.0.0",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "md5": "^2.3.0",
    "moment": "^2.29.3",
    "mongoose": "^6.4.2",
    "mongoose-paginate-ts": "^1.2.6",
    "mongoose-unique-validator": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "multiformats": "^9.7.0",
    "node-2fa": "^2.0.3",
    "node-cron": "^3.0.1",
    "node-vault": "^0.9.22",
    "nodemailer": "^6.7.6",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "otp-generator": "^4.0.0",
    "pino": "^8.1.0",
    "pino-pretty": "^8.1.0",
    "pug": "^3.0.2",
    "slugify": "^1.6.5",
    "socket.io": "^4.5.1",
    "swagger-jsdoc": "^6.2.1",
    "swagger-stats": "^0.99.2",
    "swagger-ui-express": "^4.4.0",
    "twing": "^5.1.1",
    "uint8arrays": "^3.0.0",
    "web3": "^1.7.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.1",
    "@types/sinon": "^10.0.12",
    "@types/supertest": "^2.0.12",
    "@types/swagger-stats": "^0.95.5",
    "nodemon": "^2.0.18",
    "sinon": "^14.0.0",
    "supertest": "^6.2.4",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
